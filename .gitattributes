# Установка обработки текстовых файлов
*.cs          text eol=lf
*.xaml        text eol=lf
*.xml         text eol=lf
*.json        text eol=lf
*.csproj      text eol=lf
*.props       text eol=lf
*.targets     text eol=lf
*.md          text eol=lf
*.txt         text eol=lf
*.sh          text eol=lf
*.ps1         text eol=lf

# Бинарные файлы (автоматическое определение изменений)
*.png         binary
*.jpg         binary
*.jpeg        binary
*.gif         binary
*.ico         binary
*.svg         binary
*.dll         binary
*.exe         binary
*.so          binary
*.dylib       binary
*.a           binary
*.apk         binary
*.ipa         binary
*.nupkg       binary
*.zip         binary
*.snk         binary

# Специфичные файлы MAUI/платформ
**/Resources/Raw/**/* -text
**/Platforms/**/*.bmp binary
**/Platforms/**/*.ico binary

# Игнорировать различия в EOL для проектных файлов
*.sln         text eol=crlf

# Настройки для языковых ресурсов
*.resx        text working-tree-encoding=UTF-8

# Файлы, которые должны исполняться
*.sh          text eol=lf

# Настройки для Git LFS (если используется)
#*.dll         filter=lfs diff=lfs merge=lfs -text
#*.exe         filter=lfs diff=lfs merge=lfs -text
#*.pdb         filter=lfs diff=lfs merge=lfs -text