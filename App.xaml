<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:vtrace"
             xmlns:converters="clr-namespace:vtrace.Convecters"
             x:Class="vtrace.App">

    <Application.Resources>
    <ResourceDictionary>
        <Color x:Key="Primary">#512BD4</Color>
        <Color x:Key="Success">#2ECC71</Color>
        <Color x:Key="Error">#E74C3C</Color>
        <Color x:Key="Gray600">#6B7280</Color>
        <Color x:Key="Gray300">#D1D5DB</Color>
        
        <converters:BoolToConnectTextConverter x:Key="BoolToConnectTextConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:AnyItemConnectedConverter x:Key="AnyItemConnectedConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </ResourceDictionary>
</Application.Resources>
</Application>
